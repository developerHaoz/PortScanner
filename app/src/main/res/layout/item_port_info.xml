<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/port_info_tv_ip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="192.168.255.255"
            />

        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/deep_gray">
        </ImageView>

        <TextView
            android:id="@+id/port_info_tv_port"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="80"
            />

        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/deep_gray">
        </ImageView>

        <TextView
            android:id="@+id/port_info_tv_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="Ident（英语：Ident protocol） - 旧的服务器身份识别系统，仍然被IRC服务器用来认证它的用户"
            />

        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/deep_gray">
        </ImageView>

        <TextView
            android:id="@+id/port_info_tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ALL"
            />

    </LinearLayout>

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/deep_gray"></ImageView>

</LinearLayout>
